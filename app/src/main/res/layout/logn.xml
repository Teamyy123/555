<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logn"
    android:background="@drawable/r56"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="155dp" />

    <EditText
        android:id="@+id/et_qqnumber"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/qq"
        android:hint="请输入QQ号码"
        android:textColorHint="#2b2727"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/et_passwd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:textColorHint="#2b2727"
        android:drawableLeft="@drawable/mima"
        android:hint="请输入QQ密码"
        android:inputType="textPassword"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/mima_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cb_remember"
            android:text="自动登录"
            android:layout_marginLeft="70dp"
            />

        <CheckBox
            android:id="@+id/cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="记住密码"
            android:layout_marginRight="70dp"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:onClick="login"
            android:background="#0babd7"
            android:text="登录"
            android:textSize="18dp"
            tools:ignore="OnClick" />



    </RelativeLayout>
</LinearLayout>